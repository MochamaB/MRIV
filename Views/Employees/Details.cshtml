@model MRIV.Models.EmployeeBkp

@{
    ViewData["Title"] = "Employee Details";
    var departmentName = ViewBag.DepartmentName;
    var stationName = ViewBag.StationName;
    var supervisorName = ViewBag.SupervisorName;
    var hodName = ViewBag.HodName;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Employee Details</h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="@Url.Action("Edit", "Employees", new { id = Model.PayrollNo, rollNo = Model.RollNo })" class="btn btn-primary btn-sm d-flex align-items-center py-2">
                                <i class="ri-pencil-line align-bottom me-1"></i> Edit
                            </a>
                            <a href="@Url.Action("Index", "Employees")" class="btn btn-outline-primary btn-sm d-flex align-items-center py-2">
                                <i class="ri-arrow-left-line align-bottom me-1"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="card border">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Basic Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Payroll Number</label>
                                        <div class="form-control bg-light">@Model.PayrollNo</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Roll Number</label>
                                        <div class="form-control bg-light">@Model.RollNo</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Employee ID</label>
                                        <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.EmployeId) ? "-" : Model.EmployeId)</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Surname</label>
                                        <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.SurName) ? "-" : Model.SurName)</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Other Names</label>
                                        <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.OtherNames) ? "-" : Model.OtherNames)</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Full Name</label>
                                        <div class="form-control bg-light">@Model.Fullname</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Email Address</label>
                                        <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.EmailAddress) ? "-" : Model.EmailAddress)</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Username</label>
                                        <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.Username) ? "-" : Model.Username)</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label text-muted">Status</label>
                                        <div class="form-control bg-light">
                                            @if (Model.EmpisCurrActive == 0)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Job Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Designation</label>
                                    <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.Designation) ? "-" : Model.Designation)</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Department</label>
                                    <div class="form-control bg-light">@departmentName</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Station</label>
                                    <div class="form-control bg-light">@stationName</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Role</label>
                                    <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.Role) ? "-" : Model.Role)</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Scale</label>
                                    <div class="form-control bg-light">@(string.IsNullOrEmpty(Model.Scale) ? "-" : Model.Scale)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Employment Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label text-muted">Hire Date</label>
                                    <div class="form-control bg-light">
                                        @(Model.HireDate.HasValue ? Model.HireDate.Value.ToString("dd MMM yyyy") : "-")
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Service Years</label>
                                    <div class="form-control bg-light">@(Model.ServiceYears.HasValue ? Model.ServiceYears.Value.ToString() : "-")</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Contract End Date</label>
                                    <div class="form-control bg-light">
                                        @(Model.ContractEnd.HasValue ? Model.ContractEnd.Value.ToString("dd MMM yyyy") : "-")
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Retirement Date</label>
                                    <div class="form-control bg-light">
                                        @(Model.RetireDate.HasValue ? Model.RetireDate.Value.ToString("dd MMM yyyy") : "-")
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Last Pay Date</label>
                                    <div class="form-control bg-light">
                                        @(Model.LastPay.HasValue ? Model.LastPay.Value.ToString("dd MMM yyyy") : "-")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-12 mb-4">
                        <div class="card border">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Reporting Structure</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted">Supervisor</label>
                                        <div class="form-control bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Supervisor))
                                            {
                                                <span>@supervisorName</span>
                                                <small class="d-block text-muted">(@Model.Supervisor)</small>
                                            }
                                            else
                                            {
                                                <span>Not assigned</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted">Head of Department</label>
                                        <div class="form-control bg-light">
                                            @if (!string.IsNullOrEmpty(Model.Hod))
                                            {
                                                <span>@hodName</span>
                                                <small class="d-block text-muted">(@Model.Hod)</small>
                                            }
                                            else
                                            {
                                                <span>Not assigned</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

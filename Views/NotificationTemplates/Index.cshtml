@model IEnumerable<MRIV.Models.NotificationTemplate>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed" style="padding:1rem 0rem">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1"></h5>
                    <div class="flex-shrink-0">
                        <div class="d-flex gap-2 flex-wrap">
                            <div class="search-box">
                                <input type="text" class="form-control search" placeholder="Search...">
                                <i class="ri-search-line search-icon"></i>
                            </div>

                            <!-- Filter Toggle Button -->
                          

                            <!-- Add other action buttons here -->
                            <a href="@Url.Action("Create", "NotificationTemplate")" class="btn btn-primary">
                                <i class="ri-add-line align-bottom me-1"></i> New Template
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters Partial View -->
          

            <!-- Table Content -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle mb-0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TitleTemplate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MessageTemplate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NotificationType)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TitleTemplate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MessageTemplate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NotificationType)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="mdi mdi-eye mdi-24px text-warning"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="mdi mdi-lead-pencil mdi-24px text-primary"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete mdi-24px text-danger"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Pagination -->
               
            </div>
        </div>
    </div>
</div>

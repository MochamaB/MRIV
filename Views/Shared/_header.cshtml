    <style>
        .hidden {
            display: none;
        }

        .clickable-row {
            transition: background-color 0.2s;
        }

            .clickable-row:hover {
                cursor: pointer;
                background-color: #f8f9fa;
            }

        @@media print {
            /* Basic print layout fixes */
            .col-md-6 {
                width: 50% !important;
                float: left !important;
                display: block !important;
            }

            .row {
                display: flex;
                flex-wrap: wrap;
            }

            /* Hide non-printable elements */
            .no-print,
            .printbutton,
            .btn:not(.printbutton) {
                display: none !important;
            }

            /* Clean card styling for print */
            .card, .card-body {
                border: none !important;
                box-shadow: none !important;
                padding: 0 !important;
                margin: 0 !important;
            }

            /* Body and page setup */
            body {
                margin: 0 !important;
                padding: 0 !important;
                background: white !important;
                color: black !important;
            }

            /* Ensure proper printing layout */
            .main-content,
            .page-content,
            .container-fluid {
                margin: 0 !important;
                padding: 0 !important;
                max-width: none !important;
            }
        }

        </style>
</head>

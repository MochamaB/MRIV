@{
    ViewData["Title"] = "Create Requisition Wizard";
    var currentStep = ViewBag.CurrentStep as string;
    @model MRIV.ViewModels.MaterialRequisitionWizardViewModel

}
<style>
    /* Apply to the Description column */
    .description-cell {
        max-width: 300px; /* Set the maximum width */
        word-wrap: break-word; /* Enable word wrapping */
        word-break: break-word; /* Ensure long words break correctly */
        white-space: normal; /* Allow text to wrap to the next line */
    }
</style>
<div class="row">
    <!-- Personal Details Section -->
    <div class="col-md-10">
        <h4 class="ml-1"><b>Choose Ticket</b></h4>
        <hr style="border:2px solid black" />
    </div>
    <div class="col-md-6 mb-2">
        <form method="get" action="@Url.Action("Ticket", "MaterialRequisition")">
            <div class="input-group">
                <input type="text" class="form-control form-control-sm " name="search" placeholder="Search tickets..." value="@ViewBag.Search" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary text-white">
                        <i class="mdi mdi-magnify"></i> Search
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class=" table-responsive" id="dataTable">
    <table id="table"
           data-toggle="table"
           data-icon-size="sm"
           data-buttons-class="primary"
           data-toolbar-align="right"
           data-buttons-align="left"
           data-sort-order="asc"
           data-mobile-responsive="true"
           data-sticky-header="true"
           data-pagination="true"
           data-page-list="[100, 200, 250, 500, ALL]"
           data-page-size="100"
           data-show-footer="false"
           data-side-pagination="client"
           data-show-export="true"
           class="table">
    <thead>
        <tr>
            <th>Ticket Number</th>
            <th>Title</th>
            <th data-field="Description" data-class="description-cell">Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.RequestID</td>
                    <td class="wrapcell">@ticket.Title</td>
                    <td class="wrapcell" >@ticket.Description</td>
                <td>
                        <a asp-controller="MaterialRequisition"
                           asp-action="SelectTicket"
                           asp-route-RequisitionID="@ticket.RequestID"
                           asp-route-Description="@ticket.Description"
                           class="table"
                           data-id="@ticket.RequestID"
                           data-description="@ticket.Description">
                            <i class="mdi mdi-plus-circle-outline mr-1" style="vertical-align: middle; font-size: 1.4rem;"></i>
                            Select Ticket
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
 @section Scripts {
    <script>
        $(function() {
            $('#table').bootstrapTable({
                url: '@Url.Action("Ticket", "MaterialRequisition")',
                method: 'GET',
                sidePagination: 'server',
                pagination: true,
                search: true,
                pageSize: 15,
                queryParams: function(params) {
                    return {
                        search: params.search,
                        page: params.offset / params.limit + 1,
                        pageSize: params.limit
                    };
                }
            });
        });
    </script>
    }

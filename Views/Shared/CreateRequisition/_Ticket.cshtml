@{
    ViewData["Title"] = "Select Ticket";
    var currentStep = ViewBag.CurrentStep as string;
    @model MRIV.ViewModels.MaterialRequisitionWizardViewModel

}
<style>
    /* Apply to the Description column */
    .description-cell {
        max-width: 300px; /* Set the maximum width */
        word-wrap: break-word; /* Enable word wrapping */
        word-break: break-word; /* Ensure long words break correctly */
        white-space: normal; /* Allow text to wrap to the next line */
    }
</style>
<div class="row">
    <!-- Personal Details Section -->
    <div class="col-md-10">
        <h4 class="ml-1"><b>Choose Ticket</b></h4>
        <hr style="border:2px solid black" />
    </div>
    <div class="col-md-7 mb-2 mt-2">
        <form id="searchForm" method="get" action="@Url.Action("Ticket", "MaterialRequisition")">
            <div class="form-group">
                <label  class="control-label">Select Lan Support Ticket</label><span class="requiredlabel">*</span>
            <div class="input-group">
                    <input type="number" class="form-control form-control-sm" name="search" id="searchInput"
                           placeholder="Search tickets..." value="@ViewBag.Search" />
                <div class="input-group-append">
                        <button type="submit" class="btn btn-primary text-white" style="padding: 0.5rem 1.5rem;background:#326408">
                            <i class="mdi mdi-magnify mr-1" style="vertical-align: middle; font-size: 1.4rem;"></i> Search
                    </button>
                </div>
            </div>
            </div>
        </form>
    </div>

  
</div>
<div class="table-responsive" id="dataTable">
    <!-- Table will be loaded here via AJAX -->
</div>


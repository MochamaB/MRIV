<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 text-capitalize">
                @ViewContext.RouteData.Values["controller"]
            </h4>

            <div class="page-title-right d-flex align-items-center">
                
                
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">@ViewContext.RouteData.Values["controller"]</a></li>
                    <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"]</li>
                </ol>
                @{
                    var action = ViewContext.RouteData.Values["action"].ToString();
                    if (action != "Index")
                    {
                        <a class="btn btn-soft-primary ms-3" asp-action="Index">
                            <i class="ri-arrow-left-line align-middle me-1"></i> Back
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

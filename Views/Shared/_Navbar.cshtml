@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var employeeName = HttpContextAccessor.HttpContext.Session.GetString("EmployeeName");
    var employeePayrollNo = HttpContextAccessor.HttpContext.Session.GetString("EmployeePayrollNo");
    // Get current controller name for active menu highlighting
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<header id="page-topbar">
    <div class="layout-width">
        <div class="navbar-header">
            <div class="d-flex">
                <!-- LOGO -->
                <div class="navbar-brand-box horizontal-logo">
                    <a href="/" class="logo logo-dark">
                        <span class="logo-sm">
                            <img src="~/assets/images/logo-sm1.png" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="~/assets/images/logo-dark.png" alt="" height="17">
                        </span>
                    </a>

                    <a href="/" class="logo logo-light">
                        <span class="logo-sm">
                            <img src="~/assets/images/logo-sm.png" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="~/assets/images/logo-light.png" alt="" height="17">
                        </span>
                    </a>
                </div>

                <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
                    <span class="hamburger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>
            </div>

            <div class="d-flex align-items-center">
                <div class="ms-1 header-item d-none d-sm-flex">
                   
                    <h5 class="welcome-sub-text ms-2 mb-0">Material Requisition & Issue System</h5>
                </div>

                <!-- Notification Dropdown -->
                <div class="dropdown topbar-head-dropdown ms-1 header-item" id="notificationDropdown">
                    <button type="button" class="btn btn-icon btn-topbar material-shadow-none btn-ghost-secondary rounded-circle d-flex align-items-center justify-content-center" id="page-header-notifications-dropdown" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-haspopup="true" aria-expanded="false">
                        <i class="bx bx-bell fs-22"></i>
                        <span class="position-absolute topbar-badge fs-10 translate-middle badge rounded-pill bg-danger @(ViewBag.UnreadNotifications > 0 ? "" : "d-none")">@ViewBag.UnreadNotifications<span class="visually-hidden">unread notifications</span></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end p-0 shadow-lg" aria-labelledby="page-header-notifications-dropdown" style="min-width: 380px; max-width: 420px; background-color: #ffffff; z-index: 1050; border: 1px solid rgba(0,0,0,0.15);">
                        <div class="dropdown-head bg-primary bg-pattern rounded-top">
                            <div class="p-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-0 fs-16 fw-semibold text-white">Notifications</h6>
                                    </div>
                                    <div class="col-auto dropdown-tabs">
                                        <span class="badge bg-light text-body fs-13">@ViewBag.UnreadNotifications New</span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Notification content using template-based approach -->
                        <div data-simplebar style="max-height: 480px; background-color: #ffffff;" class="pe-2" id="notificationContainer">
                            <!-- Loading indicator -->
                            <div class="text-center py-3" id="notificationLoadingIndicator">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                            <!-- Empty state for no notifications -->
                            <div class="text-center py-4 d-none" id="noNotificationsMessage">
                                <i class="bx bx-bell-off fs-24 text-muted mb-2"></i>
                                <p class="text-muted mb-0">No new notifications</p>
                            </div>
                            
                            <!-- Notification items will be populated here -->
                            <div id="notificationList"></div>
                            
                            <!-- View All button inside scrollable area at bottom -->
                            <div class="my-3 text-center" id="viewAllSection" style="display: none;">
                                <a href="@Url.Action("Index", "Notifications")" class="btn btn-soft-success waves-effect waves-light">
                                    View All Notifications <i class="ri-arrow-right-line align-middle"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Hidden notification item template -->
                        <div id="notificationTemplate" style="display: none;">
                            <div class="text-reset notification-item d-block dropdown-item position-relative" data-id="">
                                <div class="d-flex">
                                    <div class="avatar-xs me-3 flex-shrink-0">
                                        <span class="avatar-title rounded-circle fs-16 notification-icon">
                                            <i class="notification-icon-class"></i>
                                        </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <a href="#" class="stretched-link notification-link">
                                            <h6 class="mt-0 mb-1 fs-13 fw-semibold notification-title"></h6>
                                        </a>
                                        <div class="fs-13 text-muted">
                                            <p class="mb-1 notification-message"></p>
                                        </div>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline"></i> <span class="notification-time"></span></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Profile Dropdown -->
                <div class="dropdown ms-sm-3 header-item topbar-user">
                    <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="d-flex align-items-center">
                            <img class="rounded-circle header-profile-user" src="~/assets/images/users/avatar-1.jpg" alt="Header Avatar">
                            <span class="text-start ms-xl-2">
                                <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">@employeeName</span>
                                <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">User</span>
                            </span>
                        </span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        <!-- item-->
                        <h6 class="dropdown-header">Welcome @employeeName!</h6>
                        <a class="dropdown-item @(
                                   (currentController == "Employees" && currentAction == "Profile") ||
                                   (currentController == "Employees" && currentAction == "Details" &&
                                    Context.Session.GetString("EmployeePayrollNo") == Context.Request.Query["id"])
                                   ? "active"
                                   : "")"
                           href="/Employees/Profile">
                            <i class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i>
                            <span class="align-middle">Profile</span>
                        </a>

                        <a class="dropdown-item" href="/Auth/ProfileDebug">
                            <i class="mdi mdi-bug text-muted fs-16 align-middle me-1"></i>
                            <span class="align-middle">Debug Profile</span>
                        </a>

                        <div class="dropdown-divider"></div>
                        <form asp-action="Logout" asp-controller="Login" method="post" style="display:inline;">
                            <button type="submit" class="dropdown-item">
                                <i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> 
                                <span class="align-middle" data-key="t-logout">Logout</span>
                            </button>
                            @Html.AntiForgeryToken()
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

            <li class="nav-item" asp-authorize-role="Admin">
                <a class="nav-link menu-link @(currentController == "Roles" ? "active" : "")" href="/Roles/">
                    <i class="ri-shield-user-line"></i> <span data-key="t-roles">Roles</span>

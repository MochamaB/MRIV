                                    <li>Inventory by Location (Category, Station, Department)</li>
                                    <li>Status Report</li>
                                    <li>Condition Report</li>
                                    <li>Assignment History</li>
                                    <li>Material Movement Log</li>
                                    <li>Utilization Report</li>
                                    <li>Idle/Unused Materials</li>
                                    <li>Maintenance Due Report</li>
                                    <li>Warranty Expiry Report</li>
                                    <li>Lifecycle/Ageing Report</li>
                                    <li>Stock Level Report</li>
                                    <li>Reorder Alerts</li>
                                    <li>Material Audit Trail</li>
                                    <li>Disposal/Retirement Report</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Requisition Accordion -->
            <div class="col-md-6">
                <div class="accordion" id="accordionRight">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingRight1">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseRight1" aria-expanded="false"
                                    aria-controls="collapseRight1">
                                <i class="ri-file-list-3-line me-2" style="font-size:20px"></i> Requisition Module
                            </button>
                        </h2>
                        <div id="collapseRight1" class="accordion-collapse collapse"
                             aria-labelledby="headingRight1" data-bs-parent="#accordionRight">
                            <div class="accordion-body">
                                <ol>
                                    <li>Total Requisition Value</li>

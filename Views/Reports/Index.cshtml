@{
    ViewData["Title"] = "Reports";
}
<style>
/* Remove accordion background and border */
.accordion-button {
    background-color: transparent;
    box-shadow: none;
    border: none;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 1rem 1.5rem;
    align-items: center;
}

.accordion-button::after {
    width: 1.5rem;
    height: 1.5rem;
    background-size: 1.5rem;
    border: 2px solid #333;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
}

.accordion-button:not(.collapsed) {
    color: #326408;
    background-color: #ffffff;
    -webkit-box-shadow: inset 0 calc(-1 * var(--vz-accordion-border-width)) 0 var(--vz-accordion-border-color);
    box-shadow: inset 0 calc(-1 * var(--vz-accordion-border-width)) 0 var(--vz-accordion-border-color);
}

      
        /* Corrected CSS: Use ":hover" instead of "::hover" */  
        .accordion-button:hover {
                color: #ffaf00;
       
            -webkit-box-shadow: inset 0 calc(-1 * var(--vz-accordion-border-width)) 0 var(--vz-accordion-border-color);  
            box-shadow: inset 0 calc(-1 * var(--vz-accordion-border-width)) 0 var(--vz-accordion-border-color);  
        }  
        
            
.accordion-button:not(.collapsed)::after {
    transform: rotate(180deg);
     background-color: transparent !important;
     color:rgb(8, 53, 19); /* Bootstrap green or your preferred shade */
    font-weight: bold;
}

/* Add bottom border only */
.accordion-item {
    border: none;
    border-bottom: 1px solid #ddd;
    background-color: #fff;
}

/* Remove bullet points from content */
.accordion-body ul {
    list-style: none;
    padding-left: 1.5rem;
}

.accordion-body li::before {
    content: none;
}

/* Optional: spacing between accordions */
.accordion-body {
    font-size: 0.9rem;
    padding: 1.5rem;
}

</style>
<div class="card shadow-sm">
    <div class="card-header">
        <h5>Reporting Panel</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Material Accordion -->
            <div class="col-md-6">
                <div class="accordion" id="accordionLeft">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingLeft1">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseLeft1" aria-expanded="false"
                                    aria-controls="collapseLeft1">
                                <i class="ri-stack-line me-2" style="font-size:20px"></i> Material & Inventory
                            </button>
                        </h2>
                        <div id="collapseLeft1" class="accordion-collapse collapse"
                             aria-labelledby="headingLeft1" data-bs-parent="#accordionLeft">
                            <div class="accordion-body">
                                <ol>
                                    <li>Total Inventory Value</li>
                                    <li>Material Status Breakdown</li>
                                    <li>Condition Summary</li>
                                    <li>Recent Material Movements</li>
                                    <li>Low Stock/Threshold Alerts</li>

@model MRIV.Models.RoleGroup

@{
    ViewData["Title"] = "Edit Role Group";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Edit Role Group</h5>
                    <div class="flex-shrink-0">
                        <a href="@Url.Action("RoleGroups", "Roles")" class="btn btn-light">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Back to Role Groups
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                                        <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="CanAccessAcrossStations" class="form-check-input" />
                            <label asp-for="CanAccessAcrossStations" class="form-check-label">Can Access Data Across Stations</label>
                            <span asp-validation-for="CanAccessAcrossStations" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="CanAccessAcrossDepartments" class="form-check-input" />
                            <label asp-for="CanAccessAcrossDepartments" class="form-check-label">Can Access Data Across Departments</label>
                            <span asp-validation-for="CanAccessAcrossDepartments" class="text-danger"></span>
                        </div>
                    </div>
                       
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                               
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group d-flex justify-content-end pt-2" style="border-top:2px solid #dee2e6">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

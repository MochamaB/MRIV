@model MRIV.Models.RoleGroup

@{
    ViewData["Title"] = "Delete Role Group";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Delete Role Group</h5>
                    <div class="flex-shrink-0">
                        <a href="@Url.Action("RoleGroups", "Roles")" class="btn btn-soft-danger btn-sm d-flex align-items-center py-2">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Back to Role Groups
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>Are you sure you want to delete this role group? This action cannot be undone.</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>Name:</strong> @Model.Name
                        </div>
                        <div class="mb-3">
                            <strong>Description:</strong> @Model.Description
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>Full Department Access:</strong> 
                            @if (Model.HasFullDepartmentAccess)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </div>
                        <div class="mb-3">
                            <strong>Full Station Access:</strong> 
                            @if (Model.HasFullStationAccess)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </div>
                    </div>
                </div>

                <form asp-action="DeleteRoleGroup">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="RoleGroups" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

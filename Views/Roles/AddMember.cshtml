@model MRIV.ViewModels.AddRoleGroupMemberViewModel

@{
    ViewData["Title"] = "Add Member";
    var roleGroup = ViewBag.RoleGroup as MRIV.Models.RoleGroup;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Add Member to Role Group: @roleGroup.Name</h5>
                    <div class="flex-shrink-0">
                        <a href="@Url.Action("RoleGroupDetails", "Roles", new { id = roleGroup.Id })" class="btn btn-soft-danger btn-sm d-flex align-items-center py-2">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Back to Group Details
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form asp-action="AddMember">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoleGroupId" />
                    <input type="hidden" asp-for="RoleGroupName" />
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PayrollNo" class="control-label"></label>
                                <input asp-for="PayrollNo" class="form-control" required maxlength="8" />
                                <span asp-validation-for="PayrollNo" class="text-danger"></span>
                                <small class="form-text text-muted">Enter the employee's 8-digit payroll number.</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Member</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

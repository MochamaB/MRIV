@model MRIV.ViewModels.AddRoleGroupMemberViewModel

@{
    ViewData["Title"] = "Add Member";
    var roleGroup = ViewBag.RoleGroup as MRIV.Models.RoleGroup;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Add Member to Role Group: @roleGroup.Name</h5>
                    <div class="flex-shrink-0">
                        <a href="@Url.Action("RoleGroupDetails", "Roles", new { id = roleGroup.Id })" class="btn btn-soft-danger btn-sm d-flex align-items-center py-2">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Back to Group Details
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <!-- Direct Payroll Entry -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Add by Payroll Number</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="AddMember" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="RoleGroupId" />
                                    <input type="hidden" asp-for="RoleGroupName" />
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="PayrollNo" class="control-label"></label>
                                        <input asp-for="PayrollNo" class="form-control" required maxlength="8" />
                                        <span asp-validation-for="PayrollNo" class="text-danger"></span>
                                        <small class="form-text text-muted">Enter the employee's 8-digit payroll number.</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary w-100">Add Member</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Search Form -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Search Employees</h5>
                            </div>
                            <div class="card-body">
                                <form id="employeeSearchForm">
                                    <input type="hidden" asp-for="RoleGroupId" id="RoleGroupId" />
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="StationCategory" class="control-label"></label>
                                                <select asp-for="StationCategory" asp-items="Model.StationCategories" class="form-select" id="stationCategory"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="StationId" class="control-label"></label>
                                                <select asp-for="StationId" asp-items="Model.Stations" class="form-select" id="stationId"></select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="DepartmentId" class="control-label"></label>
                                                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select" id="departmentId"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Role" class="control-label"></label>
                                                <select asp-for="Role" asp-items="Model.Roles" class="form-select" id="role"></select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row mb-3">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label asp-for="SearchTerm" class="control-label"></label>
                                                <input asp-for="SearchTerm" class="form-control" id="searchTerm" placeholder="Search by name or payroll number" />
                                            </div>
                                        </div>
                                        <div class="col-md-4 d-flex align-items-end">
                                            <button type="button" id="searchButton" class="btn btn-primary w-100">Search</button>
                                        </div>
                                    </div>
                                </form>
                                
                                <div class="mt-4" id="searchResultsContainer">
                                    <div class="alert alert-info" id="initialMessage">
                                        Use the search form above to find employees to add to this role group.
                                    </div>
                                    <div id="searchResults" class="d-none">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Payroll</th>
                                                        <th>Name</th>
                                                        <th>Department</th>
                                                        <th>Station</th>
                                                        <th>Role</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="resultsBody">
                                                    <!-- Results will be populated here -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div id="noResultsMessage" class="alert alert-warning d-none">
                                        No employees found matching your search criteria.
                                    </div>
                                    <div id="loadingMessage" class="text-center d-none">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-2">Searching for employees...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Handle station category change
            $("#stationCategory").change(function() {
                var category = $(this).val();
                if (category) {
                    // Clear and disable station dropdown
                    $("#stationId").empty();
                    $("#stationId").append('<option value="">-- Loading Stations --</option>');
                    $("#stationId").prop('disabled', true);
                    
                    // Fetch stations based on category
                    $.ajax({
                        url: '@Url.Action("GetStations", "Employees")',
                        type: 'GET',
                        data: { category: category },
                        success: function(data) {
                            // Clear dropdown
                            $("#stationId").empty();
                            $("#stationId").append('<option value="">-- Select Station --</option>');
                            
                            // Add options
                            $.each(data.stations, function(i, station) {
                                $("#stationId").append('<option value="' + station.id + '">' + station.name + '</option>');
                            });
                            
                            // Enable dropdown
                            $("#stationId").prop('disabled', false);
                        },
                        error: function() {
                            $("#stationId").empty();
                            $("#stationId").append('<option value="">-- Error Loading Stations --</option>');
                            $("#stationId").prop('disabled', true);
                        }
                    });
                } else {
                    // Reset dropdown
                    $("#stationId").empty();
                    $("#stationId").append('<option value="">-- Select Station --</option>');
                    $("#stationId").prop('disabled', true);
                }
            });
            
            // Handle station change
            $("#stationId").change(function() {
                var stationId = $(this).val();
                
                // Fetch departments
                $.ajax({
                    url: '@Url.Action("GetDepartments", "Employees")',
                    type: 'GET',
                    data: { stationId: stationId },
                    success: function(data) {
                        // Clear dropdown
                        $("#departmentId").empty();
                        $("#departmentId").append('<option value="">-- Select Department --</option>');
                        
                        // Add options
                        $.each(data.departments, function(i, dept) {
                            $("#departmentId").append('<option value="' + dept.id + '">' + dept.name + '</option>');
                        });
                        
                        // Enable dropdown
                        $("#departmentId").prop('disabled', false);
                    },
                    error: function() {
                        $("#departmentId").empty();
                        $("#departmentId").append('<option value="">-- Error Loading Departments --</option>');
                    }
                });
            });
            
            // Handle search button click
            $("#searchButton").click(function() {
                performSearch();
            });
            
            // Handle Enter key in search field
            $("#searchTerm").keypress(function(e) {
                if (e.which == 13) {
                    e.preventDefault();
                    performSearch();
                }
            });
            
            function performSearch() {
                // Show loading message
                $("#initialMessage").addClass("d-none");
                $("#searchResults").addClass("d-none");
                $("#noResultsMessage").addClass("d-none");
                $("#loadingMessage").removeClass("d-none");
                
                // Get form values
                var stationCategory = $("#stationCategory").val();
                var stationId = $("#stationId").val();
                var departmentId = $("#departmentId").val();
                var role = $("#role").val();
                var searchTerm = $("#searchTerm").val();
                
                // Make AJAX request to search employees
                $.ajax({
                    url: '@Url.Action("SearchEmployees", "Employees")',
                    type: 'GET',
                    data: {
                        stationCategory: stationCategory,
                        stationId: stationId,
                        departmentId: departmentId,
                        role: role,
                        searchTerm: searchTerm
                    },
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        // Hide loading message
                        $("#loadingMessage").addClass("d-none");
                        
                        // Process results
                        if (data.results && data.results.length > 0) {
                            // Clear results table
                            $("#resultsBody").empty();
                            
                            // Add rows for each employee
                            $.each(data.results, function(i, employee) {
                                var row = '<tr>' +
                                    '<td>' + employee.payrollNo + '</td>' +
                                    '<td>' + employee.name + '</td>' +
                                    '<td>' + employee.department + '</td>' +
                                    '<td>' + employee.station + '</td>' +
                                    '<td>' + employee.role + '</td>' +
                                    '<td><button type="button" class="btn btn-sm btn-success add-employee" data-payroll="' + employee.payrollNo + '">Add</button></td>' +
                                    '</tr>';
                                $("#resultsBody").append(row);
                            });
                            
                            // Show results
                            $("#searchResults").removeClass("d-none");
                        } else {
                            // Show no results message
                            $("#noResultsMessage").removeClass("d-none");
                        }
                        
                        // Attach event handlers to Add buttons
                        $(".add-employee").click(function() {
                            var payrollNo = $(this).data("payroll");
                            $("#PayrollNo").val(payrollNo);
                        });
                    },
                    error: function() {
                        // Hide loading message
                        $("#loadingMessage").addClass("d-none");
                        
                        // Show error message
                        $("#noResultsMessage").text("An error occurred while searching. Please try again.").removeClass("d-none");
                    }
                });
            }
            
            // Initialize by disabling dependent dropdowns
            $("#stationId").prop('disabled', true);
            $("#departmentId").prop('disabled', true);
        });
    </script>
}
